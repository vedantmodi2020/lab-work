Nth smallest number
*/
#include <algorithm>
#include <iostream>
using namespace std;
int nthsmallest(int arr[], int k, int n)
{
    sort(arr, arr + k);
    return arr[n - 1];
}
int main()
{
    int arr[] = { 12, 3, 5, 7, 19 };
    int k = sizeof(arr) / sizeof(arr[0]), n = 2;
    cout << "N'th smallest element is " << nthSmallest(arr, k, n);
    return 0;
}
